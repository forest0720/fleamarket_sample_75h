- breadcrumb :my_purchased_items
= render partial: "layouts/breadcrumbs"
.container
  .container_contents
    #items.container_contents_main
      .container_contents_main__top
        購入した商品
      %ul
        - @items.each do |item|
          %li
            = link_to item_path(item.id) do
              = image_tag item.images.first.image.url, height: '48', width: '48'
              .container_contents_main__item__information
                %div
                  = item.name
                .fav-and-com
                  %span.fav
                    %i.fa.fa-star
                    = item.users.length
                  %span.com
                    %i.fa.fa-comment
                    = item.comments.length

                  
                  


    = render partial: "users/side-bar"