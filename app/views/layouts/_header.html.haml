%header.header
  .headerInner
    .mainHeader
      %h1.icon
        = link_to image_tag('logo.png', width: "140"), root_path
      .searchBox
        -# = form_with(url:search_items_path,local: true, method: :get, class: 'search-form') do |form|
        -#   %input.search-form__input{name: "keyword", placeholder: "キーワードから探す", type: "text", value: ""}
          -# %button.btn-search{ type: "submit"}
          -#   .search-form__icon
          -#     = image_tag 'icon-search 1.png',width: '20'
        = search_form_for @q, url: search_by_ransack_items_path,html: {class: 'search-form'} do |f|
          = f.search_field :name_cont, placeholder: "キーワードから探す", class: 'search-form__input'
          %button.btn-search{ type: "submit"}
            .search-form__icon
              = image_tag 'icon-search 1.png',width: '20'
    .nav
      %ul.listsLeft
        %li.listsLeft__item--first
          = link_to 'カテゴリー', '#' 
          .tree.displayNone
            %ul.categoryTree
              %li.categoryTree--item{id: '1'}
              = link_to 'レディース','#'
        %li.listsLeft__item
          = link_to 'ブランド', '#', id: 'brandBtn'
      %ul.listsRight
        -if user_signed_in?
          %li.listsRight__item--login
            = link_to 'マイページ', user_path(current_user)
        -else
          %li.listsRight__item--login 
            = link_to 'ログイン', new_user_session_path
          %li.listsRight__item--new
            = link_to '新規会員登録', new_user_registration_path